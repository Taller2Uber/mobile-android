<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.slazzari.taller2uber.activity.home.passenger.PassengerHomeActivity"
    android:padding="16dp">



    <Button
        android:id="@+id/passenger_home_edit_passenger_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"



        android:text="Settings" />

    <Button
        android:id="@+id/passenger_home_map_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Solicitar viaje"

        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
 />

    <Button
        android:id="@+id/passenger_home_chat_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toBottomOf="@id/passenger_home_map_button"
        app:layout_constraintRight_toRightOf="parent"

        android:text="Chat"
        tools:layout_editor_absoluteX="262dp"
        tools:layout_editor_absoluteY="85dp" />

    <Button
        android:id="@+id/passenger_home_balance_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Balance"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/passenger_home_edit_passenger_button"

        tools:layout_editor_absoluteX="25dp"
        tools:layout_editor_absoluteY="79dp"/>

    <Button
        android:id="@+id/passenger_home_view_drivers_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toBottomOf="@id/passenger_home_balance_button"
        app:layout_constraintLeft_toLeftOf="parent"

        android:text="Ver conductores"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="128dp" />


</android.support.constraint.ConstraintLayout>
